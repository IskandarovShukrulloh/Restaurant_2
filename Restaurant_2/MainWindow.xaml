<Window x:Class="Restaurant_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Restaurant" Height="500" Width="400" MinHeight="300" MinWidth="200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Customer Order -->
        <GroupBox Header="Customer Order" Grid.Row="0" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Chicken:" VerticalAlignment="Center"/>
                    <TextBox x:Name="ChickenQtyTextBox" Width="50" Margin="10,0,0,0" Text="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Eggs:" VerticalAlignment="Center"/>
                    <TextBox x:Name="EggQtyTextBox" Width="50" Margin="10,0,0,0" Text="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Drink:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DrinkTextBox" Width="100" Margin="10,0,0,0" SelectedIndex="1" SelectedValuePath="Content">
                        <ComboBoxItem Content="NoDrink"/>
                        <ComboBoxItem Content="Tea"/>
                        <ComboBoxItem Content="Coffee"/>
                        <ComboBoxItem Content="Water"/>
                        <ComboBoxItem Content="Coca-Cola"/>
                        <ComboBoxItem Content="Milk"/>
                        <ComboBoxItem Content="Mojito"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <Button x:Name="ReceiveRequestButton"
                Content="Receive request from a Customer"
                Grid.Row="1"
                Margin="0,10,0,0"
                Height="20"
                Click="ReceiveRequestButton_Click"/>

        <Button x:Name="SendToCookButton"
                Content="Send Orders to Cook"
                Grid.Row="2"
                Margin="0,5,0,0"
                Height="20"
                Click="SendToCookButton_Click"/>

        <TextBlock x:Name="txtEggQuality" Text="" Grid.Row="3" Margin="0,5,0,0" FontSize="14"/>

        <Button x:Name="ServeFoodButton"
                Content="Serve Food to Customers"
                Grid.Row="4"
                Margin="0,10,0,0"
                Height="20"
                Click="ServeFoodButton_Click"/>

        <!-- Results -->
        <GroupBox Header="Results" Grid.Row="5" Margin="0,10,0,0">
            <TextBox x:Name="ResultTextBox"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     Height="180"/>
        </GroupBox>
    </Grid>
</Window>
